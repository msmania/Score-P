## file       run_phase_test.sh

cleanup()
{
rm -f  scorep_phase_test.pomp_init.c \
       scorep_phase_test.opari.c \
       scorep_phase_test.c.opari.inc \
       scorep_phase_test.c \
       scorep_phase_test

rm -rf scorep-measurement-tmp
}
trap cleanup EXIT

echo "==================="
echo $PWD/run_phase_test.sh
echo "==================="

# Setup test environment
cp "@abs_srcdir@/scorep_phase_test.c" scorep_phase_test.c

OTF2_LIBDIR="$PWD/../vendor/otf2/build-backend/@LT_OBJDIR@"
CUBEW_LIBDIR="$PWD/../vendor/cubew/build-backend/@LT_OBJDIR@"
CUBELIB_LIBDIR="$PWD/../vendor/cubelib/build-backend/@LT_OBJDIR@"
export @SYS_LIB_SEARCH_PATH_VAR@="$PWD/@LT_OBJDIR@:${OTF2_LIBDIR}:${CUBEW_LIBDIR}:${CUBELIB_LIBDIR}${@SYS_LIB_SEARCH_PATH_VAR@:+:${@SYS_LIB_SEARCH_PATH_VAR@}}"

# build instrumented executable
./scorep --user -v --build-check \
        @CC@ -I. -o scorep_phase_test scorep_phase_test.c @OPENMP_CFLAGS@

export @SYS_LIB_SEARCH_PATH_VAR@=@SCOREP_PAPI_LIBDIR@${@SYS_LIB_SEARCH_PATH_VAR@:+:${@SYS_LIB_SEARCH_PATH_VAR@}}
if [ ! -e scorep_phase_test ]; then
    exit 1
fi

# execute
SCOREP_ENABLE_PROFILING=true SCOREP_ENABLE_TRACING=false ./scorep_phase_test
if [ $? -ne 0 ]; then
    exit 1
fi

exit 0
