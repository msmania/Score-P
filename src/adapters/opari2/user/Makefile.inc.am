# --------------------------------------------------------------------
# runtime management library for the opari2 user adapter

lib_LTLIBRARIES += libscorep_adapter_opari2_user_mgmt.la

libscorep_adapter_opari2_user_mgmt_la_SOURCES =                       \
    $(SRC_ROOT)src/adapters/opari2/user/SCOREP_Opari2_User_Init.c     \
    $(SRC_ROOT)src/adapters/opari2/user/SCOREP_Opari2_User_Regions.c  \
    $(SRC_ROOT)src/adapters/opari2/user/SCOREP_Opari2_User_Regions.h

nodist_libscorep_adapter_opari2_user_mgmt_la_SOURCES =    \
    @OPARI2_REGION_INFO_SRC_DIR@/pomp2_user_region_info.c \
    @OPARI2_REGION_INFO_INC_DIR@/pomp2_user_region_info.h

libscorep_adapter_opari2_user_mgmt_la_CPPFLAGS = \
    $(AM_CPPFLAGS)                               \
    -I$(INC_ROOT)src/measurement/include         \
    -I$(INC_ROOT)src/adapters/opari2             \
    -I$(PUBLIC_INC_DIR)                          \
    -I$(INC_DIR_DEFINITIONS)                     \
    $(UTILS_CPPFLAGS)                            \
    -I@OPARI2_REGION_INFO_INC_DIR@               \
    @OPARI2_CPPFLAGS@

libscorep_adapter_opari2_user_mgmt_la_LIBADD = \
    libscorep_adapter_opari2_mgmt.la \
    libutils.la

libscorep_adapter_opari2_user_mgmt_la_LDFLAGS = \
    $(library_api_version_ldflags)


# --------------------------------------------------------------------
# event library for the opari2 user adapter

lib_LTLIBRARIES += libscorep_adapter_opari2_user_event.la

