    -I$(INC_DIR_DEFINITIONS)                      \
    $(UTILS_CPPFLAGS)                             \
    -I@OPARI2_REGION_INFO_INC_DIR@                \
    @OPARI2_CPPFLAGS@

libscorep_adapter_opari2_user_event_la_LIBADD = \
    libscorep_measurement.la

libscorep_adapter_opari2_user_event_la_LDFLAGS = \
    $(library_api_version_ldflags)

