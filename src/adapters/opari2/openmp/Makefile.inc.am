    libscorep_adapter_opari2_mgmt.la \
    libutils.la

libscorep_adapter_opari2_openmp_mgmt_la_LDFLAGS = \
    $(library_api_version_ldflags)

# --------------------------------------------------------------------
# event library for the opari2 OpenMP adapter

